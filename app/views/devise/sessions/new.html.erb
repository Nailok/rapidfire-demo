<div class="tile is-ancestor is-vertical">
  <div class="tile is-parent is-vertical box">
    <article class="tile is-child">
      <p class="title">Login</p>
    </article>

    <article class="tile is-child">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class: "title is-6"%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-primary", placeholder: "Email" %>
        </div>

        <div class="field">
          <%= f.label :password, class: "title is-6"%><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "input is-primary", placeholder: "Password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="level-right">
          <div class="level-item">
            <%= link_to("Not yet registered?", new_user_registration_path) %>
          </div>
          <div class="level-item actions signup-button">
            <%= f.submit "Log in", class: "button" %>
          </div>
        </div>
      <% end %>
    </article>
  </div>
</div>


