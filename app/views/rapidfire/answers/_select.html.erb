<%= render partial: "rapidfire/answers/errors", locals: {answer: answer} %>
<% placeholder = answer.question.placeholder.present? ? answer.question.placeholder : "Select your answer" %>
<div class="form-group">
  <%= f.label :answer_text, answer.question.question_text, class: "title is-6" %><br>
  <%= f.select :answer_text, answer.question.options, {include_blank: placeholder}, class: "button is-notification full-width" %>
</div>
