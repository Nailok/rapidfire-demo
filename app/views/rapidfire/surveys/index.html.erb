<h2>
    Surveys
</h2>
<% if can_administer? %>
  <h3>
    <%= link_to "New Survey", new_survey_path %>
  </h3>
<% end %>
<hr/>

<table>
  <colgroup>
    <col>
    <col width="250">
  </colgroup>
  <thead>
    <tr>
      <th>Survey</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "survey", collection: @surveys %>
  </tbody>
</table>

<%= paginate @surveys %>
